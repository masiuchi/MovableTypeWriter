{
  "name": "Movable Type Writer",
  "short_name": "MT Writer",
  "description": "Yet Another Movable Type.",
  "manifest_version": 2,
  "version": "1.0.2",
  "default_locale": "en",
  "icons": {
    "16": "images/icon_16.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "permissions": [
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "app": {
    "background": {
      "scripts": ["js/background.js"]
    }
  }
}
