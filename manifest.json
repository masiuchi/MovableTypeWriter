{
    "name": "Movable Type Writer",
    "description": "Create and post a new entry to your Movable Type",
    "manifest_version": 2,
    "version": "1.0",
    "icons": {
         "16": "icon_16.png",
         "48": "icon_48.png",
         "128": "icon_128.png"
    },
    "permissions": [
        "storage",
        "http://*/*",
        "https://*/*"
    ],
    "app": {
        "background": {
            "scripts": ["js/background.js"]
        }
    }
}
